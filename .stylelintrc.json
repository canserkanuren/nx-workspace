{
  "ignoreFiles": ["**/*"],
  "overrides": [
    {
      "files": ["**/*.css"],
      "extends": ["stylelint-config-standard", "stylelint-config-prettier"],
      "rules": {}
    }
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "extends",
          "ignores",
          "include",
          "if",
          "else",
          "mixin"
        ]
      }
    ],
    "selector-type-no-unknown": null,
    "selector-pseudo-element-no-unknown": null
  }
}
